@model Application.Dtos.ResponsePage<Application.Dtos.Student.GetStudentDto>
<h3>Students</h3><hr />

<table class="table">
    <thead>

    </thead>
    <tbody>
        @foreach (var item in Model.Result)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="StudentEdit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Student" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="StudentDelete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="StudentAdd">Add student</a>
